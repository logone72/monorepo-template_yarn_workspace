{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "es6" /* 최신 브라우저는 es6을 대부분 지원한다. */,
    "module": "commonjs" /* 모듈 시스템을 지정한다. */,
    "lib": ["es6", "dom"],
    "strict": true,
    "outDir": "dist/@types",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"]
}
